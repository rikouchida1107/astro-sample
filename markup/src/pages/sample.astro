---
const name = "Astro";
const red = "red";
const list = "list";
const items = ["a","i","u","e","o"];
---

<h1>Hello {name}!</h1>

<h2 class={red}>Hello {name}!</h2>

<ul class={list}>
    {items.map ((item) => (
        <li>{item}</li>
    ))}
</ul>

<style lang="scss">
    .red {
        color: red;
    }
    .list {
        display: flex;
        font-size: 50px;
        gap: 50px;
        li {
            color: antiquewhite;
            list-style: none;
        }
    }
</style>